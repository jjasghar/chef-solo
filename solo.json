{
  "nginx": {
     "default_site_enabled": false,
     "source": {
               "modules": ["http_gzip_static_module", "http_ssl_module"]
                },
     "version": "1.3.15"
  },
  "unicorn": {
    "options": { "backlog": "64" },
    "preload_app": true,
    "worker_processes": "2",
    "worker_timeout": "30",
    "after_fork": "defined?(ActiveRecord::Base) and ActiveRecord::Base.establish_connection",
    "before_fork": "defined?(ActiveRecord::Base) and ActiveRecord::Base.connection.disconnect!",
    "config_file": "/var/www/rails/shared/unicorn.rb",
    "listen": "/tmp/unicorn.rails.sock",
    "pid": "/var/www/rails/shared/pids/unicorn.pid",
    "stderr_path": "/var/www/rails/shared/log/unicorn.log",
    "stdout_path": "/var/www/rails/shared/log/unicorn.log",
    "working_directory": "/var/www/rails/current"
   },
	"run_list": [ 
                "recipe[generic::default]",
                "recipe[nginx::source]",
                "recipe[unicorn]"
              ]
}
